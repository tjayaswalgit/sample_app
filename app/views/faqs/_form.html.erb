<%= form_for(@faq) do |f| %>
  <% if @faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% @faq.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%#= f.number_field :category_id %>
    <select name="faq[category_id]">
      <% @categories.each do |category| %>
        <option value="<%= category.id %>"
          <%= ' selected' if category.id == @faq.category_id %>>
          <%= category.name %>
        </option>
      <% end %>
    </select>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
